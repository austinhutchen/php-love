{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
   "public": {
    "includeFiles": [
      "**/*.php",
      "**/*.css",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.png",
      "**/*.gif",
      "**/*.svg",
      "**/*.webp"
    ]
  },
  "routes": [
    {
      "src": "(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
